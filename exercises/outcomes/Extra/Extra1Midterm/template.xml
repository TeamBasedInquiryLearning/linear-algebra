<?xml version='1.0' encoding='UTF-8'?>
<knowl mode="exercise" xmlns="https://spatext.clontz.org" version="0.2">
    <intro><p>Choose the most appropriate response for each question.</p></intro>
    <!-- {{#questions}} -->
    <!-- {{#LE1}} -->
    <knowl>
        <content>
            <p>
                Which of the following augmented matrices corresponds
                to the following system of linear equations?
                <me>
{{system}}
                </me>
            </p>
            <list>
                <!-- {{#choices}} -->
                <item><p>({{letter}}) <m>{{item}}</m></p></item>
                <!-- {{/choices}} -->
            </list>
        </content>
        <outtro>
            <!-- {{#choices}} -->
                <!-- {{#correct}} -->
            <p>({{letter}}) <m>{{item}}</m></p>
                <!-- {{/correct}} -->
            <!-- {{/choices}} -->
        </outtro>
    </knowl>
    <!-- {{/LE1}} -->
    <!-- {{#equivalent_matrix}} -->
    <knowl>
        <content>
            <p>
                Which of the following augmented matrices is equivalent
                to the following matrix?
                <me>
{{A}}
                </me>
            </p>
            <list>
                <!-- {{#choices}} -->
                <item><p>({{letter}}) <m>{{item}}</m></p></item>
                <!-- {{/choices}} -->
            </list>
        </content>
        <outtro>
            <!-- {{#choices}} -->
                <!-- {{#correct}} -->
            <p>({{letter}}) <m>{{item}}</m></p>
                <!-- {{/correct}} -->
            <!-- {{/choices}} -->
        </outtro>
    </knowl>
    <!-- {{/equivalent_matrix}} -->
    <!-- {{#LE2}} -->
    <knowl>
        <content>
            <p>
                Find
                <m>
\mathrm{RREF}{{A}}
                </m>.
            </p>
            <list>
                <!-- {{#choices}} -->
                <item><p>({{letter}}) <m>{{item}}</m></p></item>
                <!-- {{/choices}} -->
            </list>
        </content>
        <outtro>
            <!-- {{#choices}} -->
                <!-- {{#correct}} -->
            <p>({{letter}}) <m>{{item}}</m></p>
                <!-- {{/correct}} -->
            <!-- {{/choices}} -->
        </outtro>
    </knowl>
    <!-- {{/LE2}} -->
    <!-- {{#LE3-4}} -->
    <knowl>
        <content>
            <p>
                Find the solution set for
                <me>
{{system}}
                </me>
            </p>
            <list>
                <!-- {{#choices}} -->
                <item><p>({{letter}}) <m>{{item}}</m></p></item>
                <!-- {{/choices}} -->
                <item><p>(d) <m>\emptyset</m></p></item>
            </list>
        </content>
        <outtro>
            <!-- {{#choices}} -->
                <!-- {{#correct}} -->
            <p>({{letter}}) <m>{{item}}</m></p>
                <!-- {{/correct}} -->
            <!-- {{/choices}} -->
        </outtro>
    </knowl>
    <!-- {{/LE3-4}} -->
    <!-- {{#LE3empty}} -->
