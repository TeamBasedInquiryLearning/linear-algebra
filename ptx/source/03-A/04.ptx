          node[anchor=south west] {\(T(\vec v)\)};
    \draw[thick,-latex,red] (0,0) -- (1,2)
          node[anchor=south west] {\(T(\vec w)\)};
  \end{scope}
  \node[anchor=north] at (5,-1) {injective};
\end{tikzpicture}
\hspace{3em}
\begin{tikzpicture}[x=0.15in,y=0.15in]
