    \draw (0,0) -- (0,3);
    \draw (0,0) -- (-2,-1);
    \draw[thick,-latex,blue] (0,0) -- (2,1)
          node[anchor=south west] {\(\vec v\)};
    \draw[thick,-latex,red] (0,0) -- (1,2)
          node[anchor=south west] {\(\vec w\)};
  \end{scope}
  \draw[dashed,-latex] (3,3) to [bend left=30] (7,3);
