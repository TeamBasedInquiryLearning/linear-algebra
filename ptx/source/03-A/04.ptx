          node[anchor=south east] {\(\vec v\)};
    \draw[thick,-latex,red] (0,0) -- (1.5,-2)
          node[anchor=south west] {\(\vec w\)};
  \end{scope}
  \draw[dashed,-latex] (3,3) to [bend left=30] (7,3);
  \begin{scope}[shift={(9,0)}]
